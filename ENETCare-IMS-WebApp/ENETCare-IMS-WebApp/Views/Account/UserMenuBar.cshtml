@using ENETCare.IMS.Users
@model EnetCareUser

<ul class="nav navbar-right top-nav">
    @if ((User.Identity != null) && User.Identity.IsAuthenticated && User.Identity.Name != null)
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.Name <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <a href="@Url.Action(Model.HomePageAction, Model.HomePageController)"><i class="fa fa-fw fa-home"></i> Home</a>
                    <a href="@Url.Action("ChangePassword", "Manage")"><i class="fa fa-fw fa-gear"></i> Change Password</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="@Url.Action("LogOff")"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li>
            <a href="@Url.Action("Login")"><i class="fa fa-user"></i> Log In</a>
        </li>
    }
</ul>