
@using ENETCare.IMS.Interventions
@model Interventions

@{
    ViewBag.Title = "Interventions";
    ViewBag.SubTitle = "";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Client</th>
                        <th>Proposer</th>
                        <th>Date</th>
                        <th>State</th>
                        <th>District</th>
                        <th>Health</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Intervention intervention in Model)
                    {
                        <tr>
                            <td>@intervention.InterventionType</td>
                            <td>@intervention.Client</td>
                            <td>@intervention.SiteEngineer</td>
                            <td>@intervention.Date.ToString("ddd, dd MMM, yyy")</td>
                            <td>@intervention.Approval</td>
                            <td>@intervention.District</td>
                            <td>@intervention.Health</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>