@using ENETCare.IMS.Interventions
@model Interventions

@{
    ViewBag.Title = ViewData["Title"]; 
    ViewBag.SubTitle = "";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section NavBar{

    <li class="active">
        <a href="@Url.Action("Index", "Manager")"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
    </li>


    <li>
        <a href="@Url.Action("ViewProposed", "Interventions")"><i class="fa fa-fw fa-print"></i> Proposed Interventions</a>
    </li>

    <li>
        <a href="@Url.Action("ViewApproved", "Interventions")"><i class="fa fa-fw fa-print"></i> Approved Interventions</a>
    </li>


}

<div class="well-sm">
    <a class="btn btn-primary" href="@Url.Action("EditIntervention")">Edit Intervention</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Client</th>
                        <th>Proposer</th>
                        <th>Date</th>
                        <th>State</th>
                        <th>District</th>
                        <th>Health</th>
                        <th>Last Visit</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Intervention intervention in Model)
                    {
                        <tr>
                            <td>
                                @* Edit Intervention link button *@
                                <a href="@Url.Action(
                                        "EditIntervention", "Admin",
                                        new { id = intervention.ID })">
                                    <span class="glyphicon glyphicon-edit"></span> Edit
                                </a>
                            </td>
                            <td>@intervention.InterventionType</td>
                            <td>@intervention.Client</td>
                            <td>@intervention.SiteEngineer</td>
                            <td>@intervention.Date.ToString("ddd, dd MMM, yyy")</td>
                            <td>@intervention.Approval</td>
                            <td>@intervention.District</td>
                            <td>@intervention.Health</td>
                            <td>@intervention.LastVisit</td>
                            <td>@intervention.Notes</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>