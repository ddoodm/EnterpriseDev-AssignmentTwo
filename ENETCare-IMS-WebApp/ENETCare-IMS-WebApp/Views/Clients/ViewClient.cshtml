@using ENETCare.IMS.WebApp.Models
@using ENETCare.IMS.Interventions
@model ViewClientInterventionsViewModel

@{
    ViewBag.Title = "View";
    ViewBag.SubTitle = "a Client";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="text-align:center">Interventions for</h3>
<h2 style="text-align:center">@Model.ClientName</h2>
<br />

@section NavBar{
    @if (User.IsInRole("Manager"))
    {

        <li>
            <a href="@Url.Action("ViewProposed", "Interventions")"><i class="fa fa-fw fa-print"></i> Proposed Interventions</a>
        </li>

        <li>
            <a href="@Url.Action("ViewApproved", "Interventions")"><i class="fa fa-fw fa-print"></i> Approved Interventions</a>
        </li>
    }
    else if (User.IsInRole("SiteEngineer"))
    {
        <li>
            <a href="@Url.Action("Index", "Interventions")"><i class="fa fa-fw fa-dashboard"></i> Interventions</a>
        </li>

        <li>
            <a href="@Url.Action("CreateIntervention", "Interventions")"><i class="fa fa-fw fa-dashboard"></i> Create New Intervention</a>
        </li>

        <li>
            <a href="@Url.Action("Index", "Clients")"><i class="fa fa-fw fa-print"></i> Clients</a>
        </li>

        <li>
            <a href="@Url.Action("CreateNewClient", "Clients")"><i class="fa fa-fw fa-print"></i> Create New Client</a>
        </li>

    }
    else if (User.IsInRole("Accountant"))
    {
        <li>
            <a href="@Url.Action("Index", "Users")"><i class="fa fa-fw fa-dashboard"></i> Users</a>
        </li>

        <li>
            <a href="@Url.Action("Index", "Reports")"><i class="fa fa-fw fa-print"></i> Generate a Report</a>
        </li>

    }
}

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Edit</th>
                        <th>Type</th>
                        <th>Client</th>
                        <th>Proposer</th>
                        <th>Date</th>
                        <th>State</th>
                        <th>District</th>
                        <th>Health</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Intervention intervention in Model.Interventions)
                    {
                        <tr>
                            <td>
                                @* Edit Intervention link button *@
                                <a href="@Url.Action(
                                        "EditIntervention", "Admin",
                                        new { id = intervention.ID })">
                                    <span class="glyphicon glyphicon-edit"></span> Edit
                                </a>
                            </td>
                            <td>@intervention.InterventionType</td>
                            <td>@intervention.Client</td>
                            <td>@intervention.SiteEngineer</td>
                            <td>@intervention.Date.ToString("ddd, dd MMM, yyy")</td>
                            <td>@intervention.Approval</td>
                            <td>@intervention.District</td>
                            <td>@intervention.Health</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>